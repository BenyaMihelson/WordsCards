<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="title"
        android:id="@+id/tvAddEditDialogTitle"/>


    <EditText
        android:id="@+id/etWordInputDialofAddWordOrigin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/add_category_dialog_default_edit_text"
        android:padding="10dp" />
    <EditText
        android:id="@+id/etWordInputDialofAddWordTranslate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/add_category_dialog_default_edit_text"
        android:padding="10dp" />
    <EditText
        android:id="@+id/etWordInputDialofAddWordTranscription"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/add_category_dialog_default_edit_text"
        android:padding="10dp" />

</LinearLayout>