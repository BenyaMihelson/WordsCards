<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/bg_card"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="true">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        >
        <LinearLayout

            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:weightSum="10"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="0dp"

                android:gravity="top"
                android:layout_weight="5"
                android:layout_width="match_parent">

                <ImageView
                    android:id="@+id/icSound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_sound"
                    />

            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_height="0dp"
                android:gravity="bottom"
                android:layout_weight="5"
                android:layout_width="match_parent">

                <ImageView
                    android:id="@+id/isCompleteImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_name"
                    android:layout_gravity="bottom"
                    android:baselineAlignBottom="true"
                    android:layout_marginBottom="15dp" />


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="match_parent"
            android:foregroundGravity="center_vertical"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:foregroundGravity="center_vertical"
                >
                <TextView
                    android:text="СЛОВО"
                    android:id="@+id/word_origyn"
                    style="@style/AppTheme.CardsText"
                    />
                <TextView
                    android:text="[transcription]"
                    android:id="@+id/word_transcription"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    style="@style/AppTheme.CardsText" />
                <TextView
                    android:text="WORD"
                    android:id="@+id/word_translate"
                    style="@style/AppTheme.CardsText" />



            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/ic_popUp"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_popup_menu"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"



                android:elevation="1dp"
                tools:elevation="4dp"
                />



        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>